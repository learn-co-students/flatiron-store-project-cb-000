<h1>Welcome Home</h1>


<% @categories.each do |category| %>
  <%= link_to "#{category.title}", category_path(category) %>
<% end %>




<% @items.each do |item| %>
	<% if !item.nil? %>
		<% if current_user.present? %>

  		<p><%= item.title %> | <%= number_to_currency(item.price.to_f/100) %> | <%= button_to 'Add to Cart', line_items_path(item_id: item) %></p>

  	<%else%>
  			<p><%= item.title %> | <%= number_to_currency(item.price.to_f/100) %></p>
  	<%end%>

  <%end%>
<% end %>

<% if current_user.present? && current_user.current_cart.present? %>
<%= link_to 'Cart', cart_path(current_user.current_cart)%>
<%end%>