<h1>Your Cart</h1>

<% if notice %>
  <p><%= notice %></p> 
<% end %>

<% @current_cart.line_items.each do |line_item| %>
  <p><%= link_to line_item.item.title, item_path(line_item.item) %> | <%= number_to_currency((line_item.item.price * line_item.quantity).to_f/100) %> | Quantity: <%= line_item.quantity %> | <% if line_item.item.inventory < 5 %>
    <strong>There are only <%= line_item.item.inventory %> left in stock.</strong>
  <% end %> </p>
<% end %>

<p>Order total: <strong><%= number_to_currency(@current_cart.total) %></strong> </p>

<% unless @current_cart.submitted? %>
  <%= form_tag checkout_path do %>
    <%= hidden_field_tag :cart_id, @current_cart.id %>
    <%= button_tag 'Checkout' %>
  <% end %>
<% end %>
