<h1>Your Cart</h1>

<% if @cart != nil %>
	<% @cart.line_items.each do |line_item| %>
		<p>
			<%= link_to line_item.item.title, item_path(line_item.item) %>
			| <%= number_to_currency(line_item.item.price) %>
			| Quantity: <%= line_item.quantity %> | <% if line_item.item.inventory < 5 %>
				<strong>There are only <%= line_item.item.inventory %> left in stock.</strong>
			<% end %> </p>
	<% end %>
<% end %>



<p>Order total:
	<% if @cart != nil  %>
		<strong>$<%= @cart.total.to_f/100 %></strong>
	<% else %>
		<strong>$0.00</strong>
	<% end %>
</p>

<%= link_to 'Carry on Shopping', store_path %>

<% if @cart && @cart.status != 'submitted' %>
	<%= button_to 'Checkout', checkout_path %>
<% end %>