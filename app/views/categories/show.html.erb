<h1><%= @category.title %></h1>

<ul>
<% @category.items.each do |item| %>
    <% @itemPrice = item.price / 100 %>
    <li><%= link_to item.title, item_path(item) %> | <%= number_to_currency(@itemPrice) %>
    <% if !current_user.current_cart.nil? %>
    | <%= button_to "Add to Cart" %></li>
    <% end %>
<% end %>
</ul>
