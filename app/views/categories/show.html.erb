<h1><%= @category.title %></h1>

<ul>
<% @category.items.each do |item| %>
    <li>
        <p><%= link_to item.title, item_path(item) %></p>
        <p>$<%= number_to_currency(item.price) %></p>
        <p><%= button_to 'Add to Cart', line_items_path(item_id: item) if user_signed_in? %></p>
    </li>
<% end %>
</ul>