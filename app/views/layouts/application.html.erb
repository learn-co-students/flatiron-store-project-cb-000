<!DOCTYPE html>
<html>
<head>
  <title>RailsFlatironStore</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
  <%= analytics_init if Rails.env.production? %>
</head>
<body>

<%= render 'layouts/header' %>
<%= content_tag(:div, flash[:error], :id => 'flash_error') if flash[:error] %>
<%= content_tag(:div, flash[:alertnotice], :id => 'flash_error') if flash[:alertnotice] %>
<%= content_tag(:div, flash[:notice], :id => 'flash_error') if flash[:notice] %>
<%= yield %>

</body>
</html>
